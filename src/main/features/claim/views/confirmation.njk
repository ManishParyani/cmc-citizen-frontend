{% extends "layout.njk" %}
{% from "form.njk" import submitButton, errorSummary %}
{% from "support.njk" import supportWidget %}
{% from "internalLink.njk" import internalLink %}
{% from "./macro/confirmationViews.njk" import cardPaymentView, helpWithFeesView %}

{% set headingVisible = false %}
{% set heading = 'Confirmation' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">

      {% if claim.claimData.helpWithFeesNumber %}
        {{ helpWithFeesView(claim.claimData.defendant.name, claim.externalId) }}
      {% else %}
        {{ cardPaymentView(claim.claimData.defendant.name, claim.claimNumber, claim.externalId, claim.responseDeadline | date) }}
      {% endif %}

      <h2 class="heading-medium">{{ t('If the defendant pays you') }}</h2>
      <p>{{ t('You need to sign in to your account to tell us youâ€™ve been paid.') }}</p>

      {% include "includes/service-survey-link-claimant.njk" %}

      {{ internalLink(t('Go to your account'), DashboardPaths.dashboardPage.uri, 'button') }}

      {{ supportWidget() }}
    </div>
  </div>

{% endblock %}
{% block contactForHelp %}{% endblock %}
