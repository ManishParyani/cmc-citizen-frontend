{% extends "layout.njk" %}
{% from "support.njk" import supportWidget %}

{% set heading = 'Contact us' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
       <p>{{ t('We‘re experiencing intermittent problems with our phone line. Email us if you can‘t get through.') }}</p>
      {{ supportWidget('') }}
      {% if antennawebChat %}        
        <web-chat class="hidden"
          chat-title="Money Claims Web Chat"
          url="webchat.ctsc.hmcts.net"
          chat-icon-url="/img/lib/gov.uk_logotype_crown_invert_trans.png?0.26.0"
          api-version="1.0"
          Language="English"
          Service="OCMC"
          page-name="Money Claims"
          route-point-identifier="Default" work-flow-type lease-time="24" priority="5" secure-connections="true"></web-chat>
        <button class="chat-button">Talk to an Agent</button>
    {% endif %}
    </div>
  </div>
{% endblock %}
{% block contactForHelp %}{% endblock %}
